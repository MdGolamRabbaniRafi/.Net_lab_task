
@{
    ViewBag.Title = "Product";
}

<h2>Product</h2>
<form>
    <a class="btn btn-warning" href="/Home/addProduct">Add</a>
    <table border="1" class="table">
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Catagory</td>
            <td>Edit</td>
            <td>Delete</td>

        </tr>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Id</td>
                <td>@i.Name</td>
                    @foreach (var c in ViewBag.Catagory)
                    {
                        if (c.Id == i.C_Id)
                        {
                        <td>
                            @c.Name
                        </td>
                    }

                }
                    <td><a class="btn btn-warning" href="/Home/EditProduct/@i.Id">Edit</a></td>
                    <td><a class="btn btn-warning" href="/Home/deleteProduct/@i.Id">Delete</a></td>
                </tr>
        }
    </table>
</form>

